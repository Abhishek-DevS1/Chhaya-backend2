
pipeline {
    agent any 

    environment {
        WORKSPACE_DIR = "/home/abhishek/CICDpro/Chhaya-backend"
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                sh 'rm -rf .git || true'
                sh 'rm -rf * || true'
            }
        }

     stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Abhishek-DevS1/chayya-backend.git'
                sh 'ls -l Chhaya-backend/scripts/'
            }
        }


        stage('Setup Virtual Environment, Install Dependencies') {
            steps {
                sh '''
                chmod +x Chhaya-backend/scripts/setup_virtualenv.sh
                ./Chhaya-backend/scripts/setup_virtualenv.sh
                '''
            }
        }

        stage('Migration') {
            steps {
                sh '''
                chmod +x Chhaya-backend/scripts/run_migration.sh
                ./Chhaya-backend/scripts/run_migration.sh
                '''
            }
        }

        stage('Setup Gunicorn') {
            steps {
                sh '''
                chmod +x Chhaya-backend/scripts/gunicorn.sh
                ./Chhaya-backend/scripts/gunicorn.sh
                '''
            }
        }
    }
}
